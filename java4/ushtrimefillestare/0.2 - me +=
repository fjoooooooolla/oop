#include <iostream>
#include <cstring>
using namespace std;
class Counter{
private:
    int value;
public:
    Counter(){
        value=0;
    }
    Counter(int v){
        value=v;
    }
    void print(){
        cout<<value<<endl;
    }
    Counter& operator+=(const Counter&other ){
        value+=other.value;
        return *this;
    }
};

int main(){
    int value;
Counter c1(3);
Counter c2(7);
c1+=c2;
c1.print();
c2.print();
//c3.print();
}

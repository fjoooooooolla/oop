#include <iostream>
using namespace std;
class Box{
private:
    int array[3]={1,2,3};
public:
    Box(int a[3]){
        for (int i = 0; i < 3; ++i) {
            array[i]=a[i];
        }
    }
//    friend ostream& operator<<(ostream &os , const Box &box);
    int&operator[](int index){
        return array[index];
    }
};
//ostream &operator<<(ostream &os , const Box &box){
//    os<<box.array[3];
//    return os;
//}
int main(){
    int a[3]={1,2,3};
    Box b(a);
    cout<<b[0];
    cout<<b[1];
}

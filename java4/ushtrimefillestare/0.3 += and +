#include <iostream>
#include <cstring>
using namespace std;
class Counter{
private:
    int value;
public:
    Counter(){
        value=0;
    }
    Counter(int v){
        value=v;
    }
    void print(){
        cout<<value<<endl;
    }
    Counter& operator+=(const Counter&other ){
        value+=other.value;
        return *this;
    }
    Counter operator+(const Counter &other){
        return Counter(value+other.value);

    }
};

int main(){
    int value;
Counter c1(1);
Counter c2(2);
Counter c3 (3);
c1 += c2 += c3;

c1.print();
c2.print();
c3.print();
}

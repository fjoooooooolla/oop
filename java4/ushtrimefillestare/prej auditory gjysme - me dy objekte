#include <iostream>
using namespace std;
class Complex{
private:
    float a,b;
public:
    Complex(){

    }
    Complex(float aa, float bb){
    a=aa;
    b=bb;
    }
    Complex operator+(const Complex &c){
        return Complex(a+c.a,b+c.b);
    }
    Complex operator-(const Complex &c){
        return Complex(a-c.a, b-c.b);
    }
    Complex operator*(const Complex &c) {
        return Complex(a * c.a - b * c.b, b * c.a - a * c.b);
    }
    Complex operator/(const Complex &c) {
        float m = c.a * c.a + c.b * c.b;
        float r = (a * c.a - b * c.b) / m;
        return Complex(r, (b * c.a + b * c.b) / m);
    }
    friend ostream &operator<<(ostream &os , const Complex &c){
        os<<c.a;
        if (c.b>0){
            os<<"+";
        }
        os<<c.b<<"j";
        return os;
    }

};
int main(){
    Complex c1(2,-6);
    Complex c2(3, 5);
    Complex c=c1+c2;
    cout << c1 << " + " << c2 << " = " << c << endl;
    c=c1-c2;
    cout << c1 << " - " << c2 << " = " << c << endl;
    c=c1*c2;
    cout << c1 << " * " << c2 << " = " << c << endl;
    c=c1/c2;
    cout << c1 << " / " << c2 << " = " << c << endl;



}
